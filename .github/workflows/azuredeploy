    - workflow: "Git actions for Azure" {
    - on: "push"
    - resolves: ["Deploy ARM template"]
    } 

    - action: "Azure Login" {
    - uses: = "Azure/github-actions/login@master"
  }
    - secrets: = ["AZURE_SUBSCRIPTION", "AZURE_SERVICE_APP_ID ", "AZURE_SERVICE_PASSWORD", "AZURE_SERVICE_TENANT"]
}
      
    - action: "Manage Azure Resources" {
    - uses: "Azure/github-actions/arm@master"
    - env: = {
              AZURE_RESOURCE_GROUP = "<Dev_Test_group>"
              AZURE_TEMPLATE_LOCATION = "../../dnsTemplate.json"
              AZURE_TEMPLATE_PARAM_FILE = "../../parameter.dns.json"
  }
    - needs: = ["Azure Login"]
}
